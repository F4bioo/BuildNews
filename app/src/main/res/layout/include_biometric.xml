<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ds_size_04">

    <ImageView
        android:id="@+id/image_fingerprint"
        android:layout_width="@dimen/ds_size_16"
        android:layout_height="@dimen/ds_size_16"
        android:importantForAccessibility="no"
        android:src="@drawable/ds_ic_fingerprint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/text_fingerprint"
        style="@style/DsTextMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ds_size_06"
        android:layout_marginTop="@dimen/ds_size_04"
        android:alpha=".5"
        android:gravity="center_horizontal"
        android:text="@string/verify_your_identity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_fingerprint" />

    <Button
        android:id="@+id/button_verify"
        style="@style/DsSecondaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_identity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_fingerprint" />

</androidx.constraintlayout.widget.ConstraintLayout>
